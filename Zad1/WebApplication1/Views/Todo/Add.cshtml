
@model WebApplication1.ViewModels.AddTodoViewModel
@{
    ViewData["Title"] = "Add";
}

<html>
<head>
    <title>Add Todo</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
</head>
<body>
    <div class="form-control">
        <form asp-action="Add" method="post">
            Name: <input asp-for="Text" /> <span asp-validation-for="Text"></span> <br />
            Date due: <input asp-for="DateDue" /> <span asp-validation-for="DateDue"></span> <br />
            Labels: <input asp-for="Labels" /> <span asp-validation-for="Labels"></span> <small>(devided by ;)</small><br />
            <input class="btn btn-primary" type="submit" value="Add" />
        </form><br>
        <a class="btn btn-default" asp-action="Index" title="Back to main page">Back</a>
    </div>
</body>
</html>
