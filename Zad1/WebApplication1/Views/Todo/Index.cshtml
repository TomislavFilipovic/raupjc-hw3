

@model IEnumerable<WebApplication1.ViewModels.TodoViewModel>
@{
    ViewData["Title"] = "Todo Items";
}

<html>
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
</head>
    <body>
        <h1>Todo:</h1>
        <br> <a asp-controller="Todo" asp-action="Completed">View Completed</a>
        <br> <a asp-controller="Todo" asp-action="Add">Add a todo item</a><br>
        @foreach (var task in Model)
        {
            <br><strong>@task.Text</strong> @:&nbsp;
            <a class="alert-danger" >
                @task.RemamingText
            </a>
            <a >
                <br>@(@task.DateDue?.ToLongDateString() ?? "No date")
            </a>
            <br><a asp-action="MarkAsCompleted" asp-route-vm="@task.Id" title="Mark as completed">Complete</a><br>
        }
   
    </body>
</html>

